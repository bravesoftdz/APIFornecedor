unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants,
  System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.Grids, Vcl.DBGrids,
  Vcl.ExtCtrls, Vcl.DBCtrls, Vcl.StdCtrls, Vcl.Mask, Data.Win.ADODB,
  Vcl.Buttons, Vcl.Imaging.jpeg, Vcl.Imaging.pngimage;

type
  TForm1 = class(TForm)
    Label2: TLabel;
    DBEdit2: TDBEdit;
    Label3: TLabel;
    DBEdit3: TDBEdit;
    Label4: TLabel;
    DBEdit4: TDBEdit;
    Label5: TLabel;
    DBEdit5: TDBEdit;
    Label6: TLabel;
    DBEdit6: TDBEdit;
    Label7: TLabel;
    DBEdit7: TDBEdit;
    Label8: TLabel;
    DBEdit8: TDBEdit;
    Label9: TLabel;
    DBEdit9: TDBEdit;
    Label10: TLabel;
    Form1: TImage;
    GroupBox1: TGroupBox;
    GroupBox2: TGroupBox;
    GroupBox3: TGroupBox;
    Image1: TImage;
    Label11: TLabel;
    DBComboBox1: TDBComboBox;
    sbGravar: TSpeedButton;
    sbDeletar: TSpeedButton;
    sbAtualizar: TSpeedButton;
    sbCancelar: TSpeedButton;
    sbNovo: TSpeedButton;
    sbProximo: TSpeedButton;
    sbAnterior: TSpeedButton;
    procedure BitBtn1Click(Sender: TObject);
    procedure FormCloseQuery(Sender: TObject; var CanClose: Boolean);
    procedure sbGravarClick(Sender: TObject);
    procedure sbDeletarClick(Sender: TObject);
    procedure sbAtualizarClick(Sender: TObject);
    procedure sbCancelarClick(Sender: TObject);
    procedure validarCampos(Sender: TObject);
    procedure sbNovoClick(Sender: TObject);
    procedure sbAnteriorClick(Sender: TObject);
    procedure sbProximoClick(Sender: TObject);
    procedure FormActivate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

uses U_DM, U_Consulta;

procedure TForm1.BitBtn1Click(Sender: TObject);
begin
  U_Consulta.Form2.ShowModal;
end;

procedure TForm1.FormActivate(Sender: TObject);
begin
  U_DM.DataModule3.ADOQuery1.Insert;
end;

procedure TForm1.FormCloseQuery(Sender: TObject; var CanClose: Boolean);
begin
  CanClose := MessageDlg('Deseja realmente fechar a aplicação?', mtConfirmation, [mbYes,mbNo], 0) = mrYes;
end;


procedure TForm1.sbGravarClick(Sender: TObject);
begin
  If Application.MessageBox('Confirma a inserção no sitema?','>> Verificação de inserção <<',MB_YESNO +
                           MB_ICONQUESTION + MB_DEFBUTTON2) = IDYES Then
  begin
    U_DM.DataModule3.ADOQuery1.Post;
    U_DM.DataModule3.ADOQuery1.Insert;
    ShowMessage('Dados salvos com sucesso!');
  end
  else
  begin
    U_DM.DataModule3.ADOQuery1.Cancel;
    U_DM.DataModule3.ADOQuery1.Insert;
    ShowMessage('Dados não salvos!');
  end;
end;

procedure TForm1.sbDeletarClick(Sender: TObject);
begin
If Application.MessageBox('Confirma exclusão de dados?','>> Cuidado <<',MB_YESNO +
                           MB_ICONQUESTION + MB_DEFBUTTON2) = IDYES Then
  begin
    U_DM.DataModule3.ADOQuery1.Delete;
    U_DM.DataModule3.ADOQuery1.Insert;
    ShowMessage('Dados excluídos com sucesso!');
  end
  else
    begin
    U_DM.DataModule3.ADOQuery1.Cancel;
    U_DM.DataModule3.ADOQuery1.Insert;
    ShowMessage('Dados não foi excluído!');
   end
end;

procedure TForm1.sbAtualizarClick(Sender: TObject);
begin
  If Application.MessageBox('Confirma alteração de dados?','>> Alerta <<',MB_YESNO +
                           MB_ICONQUESTION + MB_DEFBUTTON2) = IDYES Then
  begin
      U_DM.DataModule3.ADOQuery1.Edit;
      U_DM.DataModule3.ADOQuery1.UpdateRecord;
      U_DM.DataModule3.ADOQuery1.Refresh;
      ShowMessage('Dados alterados com sucesso!');
   end
   else
   begin
     U_DM.DataModule3.ADOQuery1.Cancel;
     U_DM.DataModule3.ADOQuery1.Insert;
     ShowMessage('Dados não foi alterados!');
   end
end;

procedure TForm1.sbCancelarClick(Sender: TObject);
begin
  U_DM.DataModule3.ADOQuery1.Cancel;
  U_DM.DataModule3.ADOQuery1.Insert;
end;

procedure TForm1.sbNovoClick(Sender: TObject);
begin
  U_DM.DataModule3.ADOQuery1.Insert;
end;

procedure TForm1.sbAnteriorClick(Sender: TObject);
begin
  U_DM.DataModule3.ADOQuery1.Prior;
end;

procedure TForm1.sbProximoClick(Sender: TObject);
begin
  U_DM.DataModule3.ADOQuery1.Next;
end;

procedure TForm1.validarCampos(Sender: TObject);
begin
  if DBEdit2.Text = '' then
    begin
      MessageBox( handle, 'O campo nome do fornecedor não foi preenchido! ', '>> ERRO <<', MB_ICONINFORMATION or MB_OK);
    end;
end;

end.
